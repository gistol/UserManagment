<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/main.css') }}">
    {% endblock %}
</head>
<body>
{% block menu %}
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <h5 class="my-0 mr-md-auto font-weight-normal">User Manager in Symfony 4.0</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('user_index') }}">User list</a>
            <a class="p-2 text-dark" href="{{ path('user_new') }}">Add User</a>
        </nav>
    </div>
{% endblock %}
{% block body %}
    <div id="app"></div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/main.js') }}"></script>
{% endblock %}
</body>
</html>
