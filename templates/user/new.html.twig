{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form, {'action': path('user_new'), 'method': 'POST'}) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.phoneNumber) }}
                <small class="form-text text-muted">Format: +48 111 111 111</small>
                <hr>
                {{ form_label(form.address) }}
                <hr>
                <div class="row">
                    <div class="col-10">
                        {{ form_row(form.address.street) }}
                    </div>
                    <div class="col-2">
                        {{ form_row(form.address.number) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        {{ form_row(form.address.code) }}
                        <small class="form-text text-muted">Format: XX-XXX</small>
                    </div>
                    <div class="col-8">
                        {{ form_row(form.address.city) }}
                    </div>
                </div>
                <div class="col text-center">
                    <button class="btn btn-primary" type="submit">Add</button>
                    <button class="btn btn-danger" type="reset">Reset</button>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}